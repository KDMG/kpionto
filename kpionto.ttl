@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix kpic:	 <http://w3id.org/kpionto/category/>.
@prefix kpip:	 <http://w3id.org/kpionto/property/>.

###########################################
# Classes
###########################################

kpic:KpiElement
      a       owl:Class.

kpic:BusinessObjectives
      a       owl:Class ;
      rdfs:subClassOf kpic:KpiElement .

kpic:AggregationFunction
      a       owl:Class ;
      rdfs:subClassOf kpic:KpiElement .

kpic:Formula
      a       owl:Class ;
      rdfs:subClassOf kpic:KpiElement .
kpic:TestFormula
      a       owl:Class ;
      rdfs:subClassOf kpic:Formula .

kpic:Indicator
      a       owl:Class ;
      rdfs:subClassOf kpic:KpiElement .

kpic:Dimension
      a       owl:Class ;
      rdfs:subClassOf kpic:KpiElement .

kpic:Level
      a	      owl:Class;
      rdfs:subClassOf kpic:KpiElement .

kpic:Member
      a	      owl:Class;
      rdfs:subClassOf kpic:KpiElement .

###########################################
# Data properties
###########################################

kpip:Acronym
      a       owl:DatatypeProperty ;
      rdfs:domain kpic:Indicator ;
      rdfs:range xsd:string .

kpip:AggrType
      a       owl:DatatypeProperty ;
      rdfs:domain kpic:AggregationFunction ;
      rdfs:range xsd:string ;
      kpip:Allows_value
              "Holistic" , "Algebraic" , "Distributive" , "None" .

kpip:UnitOfMeasure
      a       owl:DatatypeProperty ;
      rdfs:domain kpic:Indicator ;
      rdfs:range xsd:string .

kpip:IsAdditive
      a       owl:DatatypeProperty ;
      rdfs:domain kpic:Formula ;
      rdfs:range xsd:string ;
      kpip:Allows_value
              "yes" , "no" .

kpip:KPIDescription
      a       owl:DatatypeProperty ;
      rdfs:domain kpic:Indicator ;
      rdfs:range xsd:string .

###########################################
# Object properties
###########################################

kpip:HasAggregationFunction
      a       owl:ObjectProperty ;
      rdfs:domain kpic:Indicator ;
      rdfs:range kpic:AggregationFunction .

kpip:HasFormula
      a       owl:ObjectProperty ;
      rdfs:domain kpic:Indicator ;
      rdfs:range kpic:Formula ;
      owl:inverseOf kpip:IsFormulaFor ;
      owl:maxCardinality "1.0" ;
      owl:minCardinality "1.0" .

kpip:IsFormulaFor
      a       owl:ObjectProperty ;
      rdfs:domain kpic:Formula ;
      rdfs:range kpic:Indicator ;
      owl:inverseOf kpip:HasFormula .

kpip:Rollup
      a       owl:ObjectProperty.

kpip:HasBusObj
      a       owl:ObjectProperty ;
      rdfs:domain kpic:Indicator ;
      rdfs:range kpic:BusinessObjectives ;
      owl:maxCardinality "1.0" ;
      owl:minCardinality "1.0" .

kpip:HasDimension
      a       owl:ObjectProperty ;
      rdfs:domain kpic:Indicator ;
      rdfs:range kpic:Dimension .

kpip:inLevel
      a       owl:ObjectProperty ;
      rdfs:domain kpic:Member ;
      rdfs:range kpic:Level .

kpip:inDimension
      a       owl:ObjectProperty ;
      rdfs:domain kpic:Level ;
      rdfs:range kpic:Dimension .
